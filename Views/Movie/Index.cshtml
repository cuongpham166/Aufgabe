@model IEnumerable<MovieData.Models.Movie>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Movie List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Movie" asp-action="Create" class="btn btn-primary">
                Add New Movie
            </a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Release Date</th>
                    <th>Score</th>
                    <th>Overview</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="5%">@obj.Id</td>
                        <td width="10%">@obj.Title</td>
                        <td width="10%">@obj.Genre</td>
                        <td width="10%">@obj.Date</td>
                        <td width="5%">@obj.Score</td>
                        <td width="20%">@obj.Overview</td>
                        <td width="15%">@obj.ImageUrl</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <!--<a asp-controller="Genre" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">Edit</a>
                               <form asp-action="Delete" method="post" asp-route-Id="@obj.Id">
        <button class="btn btn-danger mx-2">Delete</button>
    </form>-->
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>No Movie in DB</p>
    }
</div>

